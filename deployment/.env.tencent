# 腾讯云生产环境配置文件
# 基于项目现有配置模板创建的腾讯云部署环境变量

# 应用配置
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1
API_HOST=0.0.0.0

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=host
DB_USERNAME=host
DB_PASSWORD=host123
DB_DIALECT=mysql
DB_LOGGING=false
DATABASE_URL=mysql://host:host123@mysql:3306/host

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379

# JWT 配置
JWT_SECRET=tencent-production-jwt-secret-key-2024
JWT_REFRESH_SECRET=tencent-production-refresh-key-2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/wmv
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/aac

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# CORS 配置
CORS_ORIGIN=http://114.132.225.94:8080
CORS_CREDENTIALS=true

# 文件存储配置
OSS_TYPE=minio

# MinIO 配置
MINIO_ENDPOINT=minio:9000
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=host-photos
MINIO_BUCKET_NAME=host-photos

# 前端配置
VITE_API_URL=http://114.132.225.94:8080/api

# 腾讯云服务器配置
SERVER_IP=114.132.225.94
SERVER_PORT=8080
SERVER_USER=root

# MySQL数据库配置（用于Docker Compose）
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=host
MYSQL_USER=host
MYSQL_PASSWORD=host123