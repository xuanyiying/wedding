# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wedding_dev
DB_USERNAME=root
DB_PASSWORD=root
DB_DIALECT=mysql
DB_LOGGING=true

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/wmv
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/aac

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Wedding Club <noreply@weddingclub.com>

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# CORS 配置
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# 文件存储配置
# 存储类型: minio 或 aliyun
OSS_TYPE=minio

# MinIO 配置 (当 OSS_TYPE=minio 时使用)
MINIO_ENDPOINT=http://localhost:9000
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=host-media

# 阿里云 OSS 配置 (当 OSS_TYPE=aliyun 时使用)
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your-access-key-id
OSS_ACCESS_KEY_SECRET=your-access-key-secret
OSS_BUCKET=host-medias
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_SECURE=true

# 向后兼容的 AWS S3 配置
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# CDN 配置
# CDN_BASE_URL=https://cdn.example.com

# 监控配置
# SENTRY_DSN=
# PROMETHEUS_PORT=9090