# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
API_HOST=server

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=wedding_host
DB_USERNAME=wedding
DB_PASSWORD=wedding123
DB_DIALECT=mysql
DB_LOGGING=true

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=wedding-club-super-secret-jwt-key-2024-production-ready-256-bits-long
JWT_REFRESH_SECRET=wedding-club-super-secret-refresh-jwt-key-2024-production-ready-256-bits-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/wmv
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/aac

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Wedding Club <noreply@weddingclub.com>

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# CORS 配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# 文件存储配置
OSS_TYPE=minio
OSS_ENDPOINT=http://minio:9000
OSS_BUCKET=wedding-media
OSS_ACCESS_KEY=rustfsadmin
OSS_SECRET_KEY=rustfssecret123

# MinIO 配置（向后兼容）
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=rustfsadmin
MINIO_SECRET_KEY=rustfssecret123
MINIO_BUCKET=wedding-media
MINIO_REGION=us-east-1
